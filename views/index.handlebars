 <div id="panini">                   

 <div class="container">  
     <div id="header">
        {{!-- <div class="jumbotron jumbotron-fluid"> --}}
            <h1 id="heading1">Panini Time</h1>           
            <p>Anyone want some panini?</p>
            {{!-- <p class="lead text-center" id="header1">Order Delicious Burgers...</p> --}}
        </div>
       

    <div class="container">
        <div class="row">
            <div id="add" class="col-xs-6" "text-center enter_section" >   
                <form action="/api/panini" method="POST"> 
                    <input type="text" name="name" class="form-control" 
                    value"" id="enter_text"> 
                    <br>   
                    <button type="submit" class="btn btn-primary" id="submit-button">SUBMIT</button>                      
                </form>
                <br>
                <p>"What panini do you want?"</p>
            </div>
        </div>
    </div>
</div>
    
    
    <div class="row">
        <div class="col-xs-6 text-center" class="task"> 
            <div class="row">
                {{#each paninis}}
                    {{#unless this.eaten}}        
                <div class="col-xs-9 text-center"> 
                    <div id="uneaten-burger">{{this.id}}. {{this.name}}</div>
                </div>  
            
                <div class="col-xs-3 text-center">                  
                    <form method="POST" action="/burgers/update?_method=PUT" 
                        class="button-size">
                        <input type="hidden" name="panini_id" type="text"
                        value={{this.id}}> 
                        <br>                       
                        <button type="submit" class="btn btn-default" id="eat-it">DEVOUR IT! <i class="fas fa-thumbs-up"></i></button>                         
                    </form>                                       
                </div>
                    {{/unless}}
                {{/each}}  
            </div>
        </div>
       
  
        <div class="col-xs-4" "text-center" class="task" id="eaten">     
            {{#each paninis}}
                {{#if this.eaten}}
                    <input class="form-control" type="text" placeholder=
                    "{{this.id}}. {{this.name}}" readonly>
                {{/if}}
            {{/each}}
            <hr>
        </div>
    </div>  
</div>  
                    

